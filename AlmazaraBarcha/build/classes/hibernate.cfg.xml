<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/almazaradb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="pojos/Venta.hbm.xml"/>
    <mapping resource="pojos/Gastos.hbm.xml"/>
    <mapping resource="pojos/Cliente.hbm.xml"/>
    <mapping resource="pojos/Compra.hbm.xml"/>
    <mapping resource="pojos/Cambio.hbm.xml"/>
    <mapping resource="pojos/Producto.hbm.xml"/>
    <mapping resource="pojos/Molturacion.hbm.xml"/>
    <mapping resource="pojos/Proveedor.hbm.xml"/>
    <mapping resource="pojos/Usuario.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
